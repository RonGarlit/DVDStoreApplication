{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DVDStore.Web.MVC/bin/Debug/net8.0/DVDStore.Web.MVC.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DVDStore.Web.MVC",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7266;http://localhost:5031"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "externalTerminal"
        },
        {
            "name": ".NET Core Launch (web) - Chrome",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DVDStore.Web.MVC/bin/Debug/net8.0/DVDStore.Web.MVC.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DVDStore.Web.MVC",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7266;http://localhost:5031"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "externalTerminal",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start chrome ${auto-detect-url}"
                }
            }
        },
        {
            "name": ".NET Core Launch (web) - Firefox",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DVDStore.Web.MVC/bin/Debug/net8.0/DVDStore.Web.MVC.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DVDStore.Web.MVC",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7266;http://localhost:5031"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            //"console": "externalTerminal",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start firefox ${auto-detect-url}"
                }
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
